<div class="bg-white shadow-lg rounded-lg p-8">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">ダッシュボード</h2>

  <!-- アカウント情報 -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-700 mb-3">アカウント情報</h3>
    <div class="bg-gray-50 rounded-md p-4 space-y-2">
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">名前:</span>
        <span class="text-sm font-medium text-gray-800"><%= current_user.name %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">メールアドレス:</span>
        <span class="text-sm font-medium text-gray-800"><%= current_user.email %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">登録日:</span>
        <span class="text-sm font-medium text-gray-800"><%= current_user.created_at.strftime("%Y-%m-%d") %></span>
      </div>
    </div>
  </div>

  <!-- ログイン履歴 -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-700 mb-3">ログイン履歴</h3>
    <div class="bg-gray-50 rounded-md p-4 space-y-2">
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">ログイン回数:</span>
        <span class="text-sm font-medium text-gray-800"><%= current_user.sign_in_count || 0 %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">現在のログイン:</span>
        <span class="text-sm font-medium text-gray-800">
          <% if current_user.current_sign_in_at %>
            <%= current_user.current_sign_in_at.strftime("%Y-%m-%d %H:%M") %>
            <span class="text-xs text-gray-500">(<%= current_user.current_sign_in_ip %>)</span>
          <% else %>
            -
          <% end %>
        </span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">前回のログイン:</span>
        <span class="text-sm font-medium text-gray-800">
          <% if current_user.last_sign_in_at %>
            <%= current_user.last_sign_in_at.strftime("%Y-%m-%d %H:%M") %>
            <span class="text-xs text-gray-500">(<%= current_user.last_sign_in_ip %>)</span>
          <% else %>
            -
          <% end %>
        </span>
      </div>
    </div>
  </div>

  <!-- 連携アプリケーション -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-700 mb-3">連携アプリケーション</h3>
    <div class="bg-gray-50 rounded-md p-4">
      <% if @authorized_applications.present? %>
        <ul class="space-y-2">
          <% @authorized_applications.each do |app| %>
            <li class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-800"><%= app.name %></span>
              <span class="text-xs text-gray-500">連携中</span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-gray-500 text-center">連携しているアプリケーションはありません</p>
      <% end %>
    </div>
  </div>

  <!-- アクション -->
  <div class="space-y-3">
    <%= link_to "プロフィール編集", edit_user_registration_path, class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 text-center" %>
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 cursor-pointer" %>
  </div>
</div>
